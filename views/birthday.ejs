<script>
    // the navbar is none-static only in index page 
    $(function () {
        function scroll() {
            var top = 20;
            var scrollTop = $(window).scrollTop();
            console.log("scrolled...");
            if (scrollTop > top) {
                $('.navbar-splash').css('background-color', '#30404D');
            }
            else {
                $('.navbar-splash').css('background-color', 'transparent')
            }
        }
        $(window).on('scroll', function() {
            scroll()
        });
    });
</script>